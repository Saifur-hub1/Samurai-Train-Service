{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "./src/Global Types/global.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "./src/Global Types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}